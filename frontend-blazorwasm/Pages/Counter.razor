@page "/counter"

<PageTitle>Counter</PageTitle>

<div class="max-w-2xl mx-auto">
    <div class="mb-8">
        <h1 class="text-4xl font-bold mb-2">Counter</h1>
        <p class="text-base-content/70">A simple counter to demonstrate Blazor's interactive capabilities</p>
    </div>

    <div class="card bg-gradient-to-br from-primary/5 to-secondary/5 shadow-xl">
        <div class="card-body items-center text-center">
            <div class="mb-6">
                <p class="text-sm text-base-content/60 mb-2">Current count</p>
                <div class="text-7xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                    @currentCount
                </div>
            </div>
            
            <div class="stats stats-vertical lg:stats-horizontal shadow mb-6">
                <div class="stat">
                    <div class="stat-title">Total Clicks</div>
                    <div class="stat-value text-primary">@currentCount</div>
                    <div class="stat-desc">@GetClickMessage()</div>
                </div>
            </div>

            <div class="card-actions flex-col sm:flex-row gap-2">
                <button class="btn btn-primary btn-lg gap-2" @onclick="IncrementCount">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    Increment
                </button>
                <button class="btn btn-outline btn-lg gap-2" @onclick="DecrementCount">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4" />
                    </svg>
                    Decrement
                </button>
                <button class="btn btn-ghost btn-lg" @onclick="ResetCount">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Reset
                </button>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-6">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span>This counter demonstrates Blazor's reactive UI updates without page refreshes.</span>
    </div>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecrementCount()
    {
        currentCount--;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }

    private string GetClickMessage()
    {
        return currentCount switch
        {
            0 => "Start clicking!",
            < 10 => "Keep going!",
            < 50 => "You're on fire!",
            < 100 => "Amazing progress!",
            _ => "Incredible!"
        };
    }
}
