@page "/weather"
@inject HttpClient Http

<PageTitle>Weather</PageTitle>

<div class="max-w-6xl mx-auto">
    <div class="mb-8">
        <h1 class="text-4xl font-bold mb-2">Weather Forecast</h1>
        <p class="text-base-content/70">Fetching data from the server and displaying it beautifully</p>
    </div>

    @if (forecasts == null)
    {
        <div class="flex flex-col items-center justify-center min-h-[400px]">
            <span class="loading loading-spinner loading-lg text-primary"></span>
            <p class="mt-4 text-base-content/70">Loading weather data...</p>
        </div>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
            @foreach (var forecast in forecasts.Take(3))
            {
                <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow">
                    <div class="card-body">
                        <div class="flex justify-between items-start">
                            <div>
                                <p class="text-sm text-base-content/60">@forecast.Date.ToString("dddd")</p>
                                <h2 class="card-title">@forecast.Date.ToString("MMM dd")</h2>
                            </div>
                            <div class="badge badge-primary badge-lg">@forecast.Summary</div>
                        </div>
                        <div class="flex items-center gap-4 mt-4">
                            <div class="text-5xl font-bold">@forecast.TemperatureC°</div>
                            <div class="text-base-content/60">
                                <div>Celsius</div>
                                <div class="text-sm">@forecast.TemperatureF°F</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <h2 class="card-title mb-4">Full Forecast</h2>
                <div class="overflow-x-auto">
                    <table class="table table-zebra">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Day</th>
                                <th>Temp (°C)</th>
                                <th>Temp (°F)</th>
                                <th>Summary</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var forecast in forecasts)
                            {
                                <tr class="hover">
                                    <td>@forecast.Date.ToShortDateString()</td>
                                    <td><span class="badge badge-ghost">@forecast.Date.ToString("dddd")</span></td>
                                    <td><span class="font-semibold">@forecast.TemperatureC°</span></td>
                                    <td>@forecast.TemperatureF°</td>
                                    <td>
                                        <span class="badge @GetWeatherBadgeClass(forecast.Summary)">@forecast.Summary</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private WeatherForecast[]? forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("sample-data/weather.json");
    }

    private string GetWeatherBadgeClass(string? summary)
    {
        return summary switch
        {
            var s when s?.Contains("Hot") == true => "badge-error",
            var s when s?.Contains("Warm") == true => "badge-warning",
            var s when s?.Contains("Cool") == true => "badge-info",
            var s when s?.Contains("Freezing") == true => "badge-primary",
            var s when s?.Contains("Cold") == true => "badge-accent",
            _ => "badge-ghost"
        };
    }

    public class WeatherForecast
    {
        public DateOnly Date { get; set; }

        public int TemperatureC { get; set; }

        public string? Summary { get; set; }

        public int TemperatureF => 32 + (int)(TemperatureC / 0.5556);
    }
}
